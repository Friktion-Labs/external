{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "noEmit": false,
    "outDir": "dist/cjs/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "paths": {
      "@solana/spl-token": ["./node_modules/@solana/spl-token"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"],
  "exclude": [ "**/node_modules/", "dist" ]
}
