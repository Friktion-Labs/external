{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "strictFunctionTypes": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "inlineSources": true,
    "sourceMap": true,
    "noErrorTruncation": true,
    "experimentalDecorators": true,
    "paths": {
      "@solana/spl-token": ["./friktion-sdk/node_modules/@solana/spl-token"]
    }
  },
  "include": ["friktion-sdk/src/**/*.ts", "friktion-sdk/src/**/*.json"],
  "exclude": [
    "friktion-sdk/dist",
    "**/node_modules/"
  ]
}
